// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id Int @id @default(autoincrement()) 
  email String @unique
  name String
  password String
  salt String
  admin Boolean @default(false)
  avatar_url String?
  created_at DateTime @default(now())
  
  @@map("users")
}

model Journey {
  id Int @id @default(autoincrement()) 
  title String
  subtitle String
  location String
  coordinates Float[]
  startDate DateTime? @map("start_date")
  endDate DateTime? @map("end_date")
  price Int?
  autonomy AutonomyStatus?  @default(RELATIVE)
  imageUrl String @map("image_url")
  optionalUrl String? @map("optional_url")
  description String @map("main_description")
  recreation String?  @map("recreation_description")
  hosting String?  @map("hosting_description" )
  transport String?  @map("transport_description")
  groupSize Int[]  @map("group_size")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("journeys")
}

enum AutonomyStatus {
  GOOD
  RELATIVE
  IMPORTANT
}