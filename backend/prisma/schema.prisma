// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id Int @id @default(autoincrement()) 
  email String @unique
  firstName String @map("first_name")
  lastName String @map("last_name")
  address String?
  password String
  salt String
  admin Boolean @default(false)
  avatar String?
  created_at DateTime @default(now())
  
  @@map("users")
}

model Journey {
  id Int @id @default(autoincrement()) 
  title String
  subtitle String
  location String
  coordinates Float[]
  startDate DateTime? @map("start_date")
  endDate DateTime? @map("end_date")
  price Int?
  autonomy AutonomyStatus?  @default(RELATIVE)
  images String[]
  optionalImage String? @map("optional_image")
  description String @map("main_text")
  recreation String?  @map("recreation_text")
  hosting String?  @map("hosting_text" )
  transport String?  @map("transport_text")
  groupSize Int[]  @map("group_size")
  updatedAt DateTime @updatedAt @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("journeys")
}

enum AutonomyStatus {
  GOOD
  RELATIVE
  IMPORTANT
}