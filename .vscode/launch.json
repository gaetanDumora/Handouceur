{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Node (Docker)",
            "protocol": "inspector",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}/backend/src",
            "remoteRoot": "/usr/src/app/src",
            "sourceMaps": true,
            "skipFiles": [
                "/usr/src/app/node_modules/**/*.js",
                "<node_internals>/**"
            ]
        }
    ]
}